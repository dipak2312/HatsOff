<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hatsoffdigital.hatsoff">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />




    <application
        android:allowBackup="true"
        android:icon="@mipmap/hatsofficon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/hatsofficon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service android:name=".FCM.MyFirebaseMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/not" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/HOBlue" />

        <activity
            android:name=".Activity.Landing.SplashScreenActivity"
            android:screenOrientation="portrait">

            <!-- android:theme="@style/Theme.Transparent" -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Landing.GetOtpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Landing.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.home.HomeScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Toggle.ToggleScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Profile.UpdateProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Attendence.AttendenceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Attendence.CheckAttendenceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Attendence.ScanAttendenceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Attendence.SuccessScanAttendActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Activity.Holiday.HolidayActivity" />
        <activity android:name=".Activity.Notification.NotificationActivity" />
        <activity android:name=".Activity.Leave.LeaveHomeActivity" />
        <activity android:name=".Activity.Leave.LeaveApplyActivity" />
        <activity android:name=".Activity.Leave.LeaveHistroyActivity" />
        <activity android:name=".Activity.Salary.SalaryActivity"></activity>
    </application>

</manifest>
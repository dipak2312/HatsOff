<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardElevation="0dp"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/attend_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="Saturday,29 September,18"
            android:textSize="@dimen/text_size14"
            android:fontFamily="@font/montserratregular"
            android:textColor="@color/HOBlue"
            />

            <TextView
            android:id="@+id/attend_status"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:text="HALF"
            android:gravity="center"
            android:background="@drawable/rounded_attend_shadow"
            android:textSize="@dimen/text_size14"
            android:layout_marginRight="@dimen/margin_10"
            android:textColor="@color/black"
            />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_3"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">



            <Button
                android:id="@+id/btn_intime"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:text="11:30 AM"
                android:textAllCaps="false"
                android:textColor="@color/HOBlue"
                android:background="@drawable/rounded_attend_shadow"
                />

            <Button
                android:id="@+id/btn_outtime"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:text="7:40 PM"
                android:textAllCaps="false"
                android:layout_marginLeft="@dimen/margin_20"
                android:textColor="@color/HOBlue"
                android:background="@drawable/rounded_attend_shadow"
                />
        </LinearLayout>


    </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
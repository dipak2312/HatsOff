<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Attendence.SuccessScanAttendActivity">



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/success_scan"
                android:layout_width="match_parent"
                android:layout_height="210dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baground1"
                    android:scaleType="fitXY"/>

                <RelativeLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5">


                <ImageView
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:src="@drawable/howhite"
                android:layout_centerHorizontal="true"/>


                <ImageView
                android:id="@+id/scan_toggel_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_20"
                android:src="@drawable/toggel"/>

                <ImageView
                android:id="@+id/scan_close_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_20"
                android:src="@drawable/backblack"/>

                </RelativeLayout>

                <LinearLayout
                android:id="@+id/lin_attendence"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/corner_white"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginRight="@dimen/margin_30"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/top_bar">


                    <TextView
                        android:id="@+id/abc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:fontFamily="@font/youngserifregular"
                        android:text="Attendance"
                        android:textAllCaps="false" />




                <!--<LinearLayout-->
                <!--android:id="@+id/main_text"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_weight="0.6">-->

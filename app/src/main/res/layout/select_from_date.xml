<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rel_txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size20"
            android:textColor="@color/HOBlue"
            android:fontFamily="@font/montserratregular"
            android:textStyle="bold"
            android:text="Error" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel_txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_below="@+id/rel_txt1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size16"
            android:textColor="@color/HOBlue"
            android:fontFamily="@font/montserratregular"
            android:text="Kindly select the ''from'' date first." />


    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_txt2"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="@dimen/margin_20">

        <Button
            android:id="@+id/wfh_btn_okay"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:text="Okay"
            android:textSize="@dimen/text_size16"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/corner_button" />


    </RelativeLayout>


</RelativeLayout>
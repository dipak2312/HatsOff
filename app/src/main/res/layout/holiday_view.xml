<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     app:cardElevation="2dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="@dimen/margin_25"
    android:layout_marginLeft="@dimen/margin_5"
    android:layout_marginRight="@dimen/margin_5"

    android:layout_height="45dp">

    <RelativeLayout
        android:id="@+id/rel_baground"
        android:layout_width="match_parent"

        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/rel_hol_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/holiday_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="25 Dec,18"

                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rel_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rel_hol_date"
            android:layout_centerVertical="true">

             <View
                 android:layout_width="2dp"
                 android:layout_height="30dp"
                 android:textColor="@color/black"
                 android:textStyle="bold"
                 android:background="@color/black">


             </View>

        </RelativeLayout>


        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/rel_view"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/holiday_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:text="Christmas Day"

                />

        </RelativeLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>
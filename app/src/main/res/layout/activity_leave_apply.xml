<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Leave.LeaveApplyActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/attend_logo"
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baground1"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5">


            <ImageView
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:src="@drawable/howhite"
                android:layout_centerHorizontal="true"/>


            <ImageView
                android:id="@+id/img_Leave_send_setting"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_20"
                android:src="@drawable/toggel"/>

            <ImageView
                android:id="@+id/img_leave_send_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_20"
                android:src="@drawable/backblack"/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/lin_attendence"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/corner_white"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_30"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@+id/top_bar">


            <TextView
                android:id="@+id/abc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/youngserifregular"
                android:text="Leave Tracker"
                android:textAllCaps="false" />

            <!--<LinearLayout-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_toLeftOf="@+id/main_text"-->
                <!--android:layout_gravity="center"-->
                <!--android:gravity="right"-->
                <!--android:layout_weight="0.4">-->
                <!--<ImageView-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:src="@drawable/leavetrack"-->
                    <!--android:layout_marginRight="@dimen/margin_5" />-->
            <!--</LinearLayout>-->

            <!--<LinearLayout-->
                <!--android:id="@+id/main_text"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_weight="0.6">-->
                <!--<TextView-->
                    <!--android:id="@+id/abc"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:fontFamily="@font/youngserifregular"-->
                    <!--android:text="Leave Tracker"-->
                    <!--android:textAllCaps="false" />-->

            <!--</LinearLayout>-->



        </LinearLayout>


        <RelativeLayout
            android:id="@+id/text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_attendence"
            android:layout_marginTop="@dimen/margin_15">

            <TextView
                android:id="@+id/leave_apply_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:fontFamily="@font/montserratregular"
                android:textSize="@dimen/text_size14"
                android:text="Saturday,29 September,18"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/text_main_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_date"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:orientation="horizontal"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="0.5">
                <TextView
                    android:id="@+id/txt_el_available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/montserratregular"
                    android:textSize="@dimen/text_size16"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EL Available"
                    android:fontFamily="@font/montserratregular"
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/white"
                    />
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Available"-->
                    <!--android:fontFamily="@font/montserratregular"-->
                    <!--android:textSize="@dimen/text_size14"-->
                    <!--android:textColor="@color/white"-->
                    <!--/>-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_pl_available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_size16"
                    android:fontFamily="@font/montserratregular"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PL Available"
                    android:fontFamily="@font/montserratregular"
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/white" />
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Available"-->
                    <!--android:fontFamily="@font/montserratregular"-->
                    <!--android:textSize="@dimen/text_size14"-->
                    <!--android:textColor="@color/white" />-->
            </LinearLayout>





        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_main_section"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/img_leave_inst"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/notiicon"
                android:layout_marginRight="@dimen/margin_30"/>

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_radio_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attend_logo"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_25"
        android:layout_marginLeft="@dimen/margin_25">

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_plan_leave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Planned Leaves"
                android:fontFamily="@font/montserratregular"
                android:layout_marginRight="@dimen/margin_10"
                android:buttonTint="@color/HOBlue"
                android:textColor="@color/HOBlue"
                android:textSize="@dimen/text_size12"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio_half_leave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/HOBlue"
                android:fontFamily="@font/montserratregular"
                android:layout_marginLeft="@dimen/margin_25"
                android:textSize="@dimen/text_size12"
                android:textColor="@color/HOBlue"
                android:text="Halfday Leaves" />

        </RadioGroup>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_radio_button"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_10">

        <RelativeLayout
            android:id="@+id/rel_planned_leave"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lin_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="0.45">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="4dp"
                android:elevation="4dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="@dimen/margin_15">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <TextView
                android:id="@+id/text_planned_from_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="From"
                android:fontFamily="@font/montserratregular"
                android:drawableRight="@mipmap/dateicon"
                android:textColorHint="@color/HOBlue"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/margin_10"
                android:textColor="@color/HOBlue"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size12"
                android:maxLines="1"
                android:layout_centerVertical="true"/>

            </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_weight="0.1">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/HOBlue"
                android:textSize="@dimen/margin_30"
                android:text="-"
               />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="0.45">

          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              app:cardElevation="4dp"
              android:elevation="4dp"
              android:layout_margin="6dp"

              app:cardCornerRadius="@dimen/margin_15">

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <TextView
               android:id="@+id/text_planned_to_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="To"
                android:fontFamily="@font/montserratregular"
                android:drawableRight="@mipmap/dateicon"
                android:textColorHint="@color/HOBlue"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_10"
                android:textColor="@color/HOBlue"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size12"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
              </RelativeLayout>
          </android.support.v7.widget.CardView>

        </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@+id/lin_date"
            android:layout_centerInParent="true"
            app:cardElevation="4dp"
            android:layout_margin="7dp"
            app:cardCornerRadius="15dp"
            android:elevation="4dp"
            android:layout_marginTop="@dimen/margin_10">
            <TextView
                android:id="@+id/planned_total_days"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:gravity="center"
                android:fontFamily="@font/montserratregular"
                android:textColor="@color/HOBlue"
                android:textSize="@dimen/text_size14"
                android:text=" Days" />

        </android.support.v7.widget.CardView>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rel_halfday_leave"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lin_date1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="0.45">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardElevation="4dp"
                        android:elevation="4dp"
                        android:layout_margin="6dp"

                        app:cardCornerRadius="@dimen/margin_15">



                    <RelativeLayout
                        android:id="@+id/rel_intime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="InTime"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/montserratregular"
                        android:textColorHint="@color/HOBlue"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/HOBlue"
                        android:textSize="@dimen/text_size12"
                        android:maxLines="1"
                      />

                    <TextView
                        android:id="@+id/text_halfday_in_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="--:-- --"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/montserratregular"
                        android:textColorHint="@color/HOBlue"
                        android:textColor="@color/HOBlue"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_gravity="center_vertical|right"
                        android:textSize="@dimen/text_size12"
                        android:maxLines="1"
                       />

                    </RelativeLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:layout_weight="0.1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/HOBlue"
                        android:textSize="@dimen/margin_30"
                        android:text="-"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="0.45">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardElevation="4dp"
                        android:elevation="4dp"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="@dimen/margin_15">


                    <RelativeLayout
                        android:id="@+id/rel_outtime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="OutTime"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/montserratregular"
                            android:textColorHint="@color/HOBlue"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/HOBlue"
                            android:textSize="@dimen/text_size12"
                            android:maxLines="1"
                            />

                        <TextView
                            android:id="@+id/text_halfday_outtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="--:-- --"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/montserratregular"
                            android:textColorHint="@color/HOBlue"
                            android:textColor="@color/HOBlue"
                            android:layout_marginRight="@dimen/margin_10"
                            android:layout_gravity="center_vertical|right"
                            android:textSize="@dimen/text_size12"
                            android:maxLines="1"
                            />

                    </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_below="@+id/lin_date1"
                android:layout_centerInParent="true"
                app:cardElevation="4dp"
                android:layout_margin="7dp"
                app:cardCornerRadius="15dp"
                android:elevation="4dp"
                android:layout_marginTop="@dimen/margin_10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <TextView
                    android:id="@+id/text_half_day_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date"
                    android:fontFamily="@font/montserratregular"
                    android:drawableRight="@mipmap/dateicon"
                    android:textColorHint="@color/HOBlue"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_10"
                    android:textColor="@color/HOBlue"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size14"
                    android:maxLines="1"
                    android:layout_centerVertical="true"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_date"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20">

        <RelativeLayout
            android:id="@+id/text_first_line"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:layout_marginTop="@dimen/margin_20"
               android:textSize="@dimen/text_size14"
               android:textColor="@color/HOBlue"
               android:fontFamily="@font/montserratregular"
               android:text="This date range is coming under"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/text_first"
            android:layout_width="match_parent"
            android:layout_below="@+id/text_first_line"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/under_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size14"
                android:textColor="@color/HOBlue"
                android:layout_centerInParent="true"
                android:fontFamily="@font/montserratregular"
                android:text=""/>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rel_reason"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/text_first"
            android:background="@drawable/cornor_button_small"
            android:layout_marginTop="@dimen/margin_20">

            <EditText
                android:id="@+id/attend_bahana"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_5"
                android:textColor="@color/black"
                android:background="@null"
                android:gravity="top"
                android:hint="Type your Reason Here"
                android:textSize="@dimen/text_size14" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_reason"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_20">

            <Button
                 android:id="@+id/btn_apply_leave"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:text="Apply For Leaves"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/youngserifregular"
                android:background="@drawable/corner_button"
                />



        </RelativeLayout>





    </RelativeLayout>


        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>
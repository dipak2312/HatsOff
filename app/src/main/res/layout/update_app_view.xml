<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_img"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="20dp">
        
        <ImageView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/appupdate"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/text_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_img"
        android:layout_marginTop="@dimen/margin_10">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/margin_18"
            android:textStyle="bold"
            android:textColor="@color/HOBlue"
            android:text="Please Update Your App Now"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_rel"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_25">

        <Button
            android:id="@+id/btn_update"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
          android:layout_centerInParent="true"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/corner_button"
            />

    </RelativeLayout>

</RelativeLayout>
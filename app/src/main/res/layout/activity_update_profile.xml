    <RelativeLayout
        android:id="@+id/rel_blood_group"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rel_email_id"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:background="@drawable/rounded_attend_shadow"
        android:layout_marginTop="@dimen/margin_15">

        <EditText
            android:id="@+id/edit_bloodgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Blood Group"
            android:textColorHint="@color/HOBlue"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/margin_15"
            android:textColor="@color/HOBlue"
            android:textSize="@dimen/text_size14"
            android:maxLines="1"
            android:background="@null"
            android:layout_centerVertical="true"
            android:inputType="textEmailAddress"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_address"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rel_blood_group"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:background="@drawable/rounded_attend_shadow"
        android:layout_marginTop="@dimen/margin_15">

        <EditText
            android:id="@+id/edit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:textColorHint="@color/HOBlue"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/margin_15"
            android:textColor="@color/HOBlue"
            android:textSize="@dimen/text_size14"
            android:maxLines="3"
            android:background="@null"
            android:layout_centerVertical="true"
            android:inputType="textCapSentences"/>


    </RelativeLayout>




    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_address"
        android:layout_marginBottom="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_20">


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/corner_button"
            />

    </RelativeLayout>



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel_update_profile">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rel_profile_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle_profile_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/HOBlue"
                    android:src="@drawable/user_info"/>

                <TextView
                    android:id="@+id/text_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/margin_30"
                    android:layout_centerInParent="true"
                    android:textColor="@color/HOBlue"
                    android:text="+"/>


            </RelativeLayout>

        <RelativeLayout
        android:id="@+id/rel_fullname"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/margin_15"
            android:layout_below="@+id/rel_profile_icon"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:background="@drawable/rounded_attend_shadow">

        <EditText
         android:id="@+id/edit_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:textColorHint="@color/HOBlue"
        android:textColor="@color/HOBlue"
        android:textSize="@dimen/text_size14"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="@dimen/margin_15"
        android:background="@null"
        android:layout_centerVertical="true"
            android:maxLines="1"
        android:inputType="textEmailAddress"/>


        </RelativeLayout>

    <RelativeLayout
    android:id="@+id/rel_email"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_below="@+id/rel_fullname"
    android:layout_marginLeft="@dimen/margin_30"
    android:layout_marginRight="@dimen/margin_30"
    android:background="@drawable/rounded_attend_shadow"
    android:layout_marginTop="@dimen/margin_15">

        <EditText
    android:id="@+id/edit_lastname"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Last Name"
    android:textColor="@color/HOBlue"
    android:textSize="@dimen/text_size14"
    android:textColorHint="@color/HOBlue"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="@dimen/margin_15"
    android:background="@null"
    android:layout_centerVertical="true"
    android:maxLines="1"
    android:inputType="textEmailAddress"/>

    </RelativeLayout>

    <RelativeLayout
    android:id="@+id/rel_emp_no"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_below="@+id/rel_email"
    android:layout_marginLeft="@dimen/margin_30"
    android:layout_marginRight="@dimen/margin_30"
    android:background="@drawable/corner_edit_text"
    android:layout_marginTop="@dimen/margin_15">


    <TextView
    android:id="@+id/text_emp_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="HO28"
    android:textStyle="bold"
    android:textColor="@color/HOBlue"
    android:textSize="@dimen/text_size14"
    android:textColorHint="@color/HOBlue"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="@dimen/margin_15"
    android:background="@null"
    android:layout_centerVertical="true"
    android:maxLines="1"
   />


    </RelativeLayout>



    <RelativeLayout
    android:id="@+id/rel_mobile_no"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_below="@+id/rel_emp_no"
    android:layout_marginLeft="@dimen/margin_30"
    android:layout_marginRight="@dimen/margin_30"
    android:background="@drawable/rounded_attend_shadow"
    android:layout_marginTop="@dimen/margin_15">


    <EditText
     android:id="@+id/edit_mobileno"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Mobile Number"
    android:textColorHint="@color/HOBlue"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="@dimen/margin_15"
    android:textColor="@color/HOBlue"
    android:textSize="@dimen/text_size14"
    android:maxLength="10"
    android:background="@null"
    android:layout_centerVertical="true"
    android:inputType="phone"/>


    </RelativeLayout>


    <RelativeLayout
    android:id="@+id/rel_bdy_date"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_below="@+id/rel_mobile_no"
    android:layout_marginLeft="@dimen/margin_30"
    android:layout_marginRight="@dimen/margin_30"
    android:background="@drawable/rounded_attend_shadow"
    android:layout_marginTop="@dimen/margin_15">

     <TextView
     android:id="@+id/edit_bdydate"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:hint="Birthday Date"
     android:drawableRight="@mipmap/dateicon"
     android:textColorHint="@color/HOBlue"
     android:layout_marginLeft="20dp"
     android:layout_marginRight="@dimen/margin_20"
     android:textColor="@color/HOBlue"
     android:textSize="@dimen/text_size14"
     android:maxLines="1"
     android:layout_centerVertical="true"
   />


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rel_join_date"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rel_bdy_date"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:background="@drawable/rounded_attend_shadow"
        android:layout_marginTop="@dimen/margin_15">

        <TextView
            android:id="@+id/edit_joindate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Joining Date"
            android:textColorHint="@color/HOBlue"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/HOBlue"
            android:textSize="@dimen/text_size14"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/dateicon"

            />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_email_id"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rel_join_date"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:background="@drawable/rounded_attend_shadow"
        android:layout_marginTop="@dimen/margin_15">

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Id"
            android:textColorHint="@color/HOBlue"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/margin_15"
            android:textColor="@color/HOBlue"
            android:textSize="@dimen/text_size14"
            android:maxLines="1"
            android:background="@null"
            android:layout_centerVertical="true"
            android:inputType="textEmailAddress"/>


    </RelativeLayout>


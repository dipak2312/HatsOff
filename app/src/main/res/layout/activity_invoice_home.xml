<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.Invoice.InvoiceHomeActivity">


    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/homebaground" />

        <ImageView
            android:id="@+id/img_invoice_home"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/logowhite" />

        <RelativeLayout
            android:id="@+id/rel_invoice_toggle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="@dimen/margin_10">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/toggel" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_color_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_90"
        android:background="@drawable/corner_white_home">


        <RelativeLayout
            android:id="@+id/rel_trans_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_profile"
            android:layout_marginRight="@dimen/margin_40"
            android:layout_marginLeft="@dimen/margin_40"
            android:layout_marginTop="@dimen/margin_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.34"
                    android:layout_marginLeft="@dimen/margin_3"
                    android:gravity="end">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/corner_avgtime"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView

                            android:id="@+id/text_approved_req"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratregular"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size16" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratregular"
                            android:text="Approved"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size12" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/margin_3"
                    android:layout_weight="0.33">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_marginRight="@dimen/margin_3"
                        android:background="@drawable/corner_pending"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_pending_req"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratregular"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratregular"
                            android:text="Pending"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size12" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/margin_3"
                    android:layout_weight="0.33">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/margin_3"
                        android:background="@drawable/corner_below_avgtime"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_total_requested"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratregular"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratregular"
                            android:text="Cancelled"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size12" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_request_invoice"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rel_color_tab"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_30"
        android:background="@drawable/corner_button">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/youngserifregular"
            android:text="Request For Invoice"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size16" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rel_request_invoice"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_15"
        android:background="@color/HOBlue">


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_line1"
        android:layout_marginTop="@dimen/margin_20">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy_request_invoice"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </androidx.recyclerview.widget.RecyclerView>


    </RelativeLayout>


</RelativeLayout>
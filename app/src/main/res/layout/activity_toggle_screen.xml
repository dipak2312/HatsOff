<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HOBlue"
    tools:context=".Activity.Toggle.ToggleScreenActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15">


                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/howhite" />

                <RelativeLayout
                    android:id="@+id/rel_minus_toggel"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_10">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/minus" />

                </RelativeLayout>


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/lin_update_profile"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/top_bar"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginTop="170dp"
                android:layout_marginRight="@dimen/margin_30"
                android:background="@drawable/corner_white_button"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:fontFamily="@font/youngserifregular"
                    android:text="Update Profile"
                    android:textAllCaps="false"
                    android:textColor="@color/HOBlue"
                    android:textSize="@dimen/text_size14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_terms_cond"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/lin_update_profile"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginTop="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_30"
                android:background="@drawable/corner_white_button"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:fontFamily="@font/youngserifregular"
                    android:text="Terms And Conditions"
                    android:textAllCaps="false"
                    android:textColor="@color/HOBlue"
                    android:textSize="@dimen/text_size14" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin_rete_this_app"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/lin_terms_cond"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginTop="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_30"
                android:background="@drawable/corner_white_button"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:fontFamily="@font/youngserifregular"
                    android:text="Rate This App"
                    android:textAllCaps="false"
                    android:textColor="@color/HOBlue"
                    android:textSize="@dimen/text_size14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_contact_us"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/lin_rete_this_app"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginTop="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_30"
                android:background="@drawable/corner_white_button"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:fontFamily="@font/youngserifregular"
                    android:text="Feedback"
                    android:textAllCaps="false"
                    android:textColor="@color/HOBlue"
                    android:textSize="@dimen/text_size14" />

            </LinearLayout>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.WFH.WfhApplyActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/homebaground"/>

                <ImageView
                    android:id="@+id/img_home"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/logowhite" />

                <RelativeLayout
                    android:id="@+id/rel_wfh_apply_toggel"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="@dimen/margin_10">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/toggel" />

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/holiday_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_90"
                android:background="@drawable/corner_white_home">


                <RelativeLayout
                    android:id="@+id/rel_trans_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_profile"
                    android:layout_marginTop="@dimen/margin_20">


                    <LinearLayout
                        android:id="@+id/lin_pl_avi"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/corner_pl"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_applied_wfh_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratregular"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratregular"
                            android:text="Applied WFH"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size12" />


                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_wfh_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/holiday_logo"
                android:layout_marginTop="@dimen/margin_35">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:fontFamily="@font/montserratregular"
                    android:gravity="center"
                    android:text="@string/WFH_text"
                    android:textColor="@color/HOBlue"
                    android:textSize="@dimen/text_size12" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_wfh_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_wfh_text"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_30"
                android:layout_marginRight="@dimen/margin_15">


                <LinearLayout
                    android:id="@+id/lin_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="0.45">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="6dp"
                            android:elevation="4dp"
                            app:cardCornerRadius="@dimen/margin_5"
                            app:cardElevation="4dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <TextView
                                    android:id="@+id/text_wfh_from_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="@dimen/margin_10"
                                    android:drawableRight="@mipmap/dateicon"
                                    android:fontFamily="@font/montserratregular"
                                    android:gravity="center_vertical"
                                    android:hint="From"
                                    android:maxLines="1"
                                    android:textColor="@color/HOBlue"
                                    android:textColorHint="@color/HOBlue"
                                    android:textSize="@dimen/text_size12" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/HOBlue"
                            android:textSize="@dimen/margin_30" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="0.45">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="6dp"
                            android:elevation="4dp"
                            app:cardCornerRadius="@dimen/margin_5"

                            app:cardElevation="4dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/text_wfh_to_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/margin_15"
                                    android:layout_marginRight="@dimen/margin_10"
                                    android:drawableRight="@mipmap/dateicon"
                                    android:fontFamily="@font/montserratregular"
                                    android:gravity="center_vertical"
                                    android:hint="To"
                                    android:maxLines="1"
                                    android:textColor="@color/HOBlue"
                                    android:textColorHint="@color/HOBlue"
                                    android:textSize="@dimen/text_size12" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/lin_date"
                    android:layout_centerInParent="true"
                    android:layout_margin="7dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:elevation="4dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/wfh_total_days"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserratregular"
                        android:gravity="center"
                        android:text=" Days"
                        android:textColor="@color/HOBlue"
                        android:textSize="@dimen/text_size14" />

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_reason"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/rel_wfh_date"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginTop="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_25"
                android:background="@drawable/cornor_button_small">

                <EditText
                    android:id="@+id/edit_wfh_bahana"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="Type your Reason Here"
                    android:textColor="@color/HOBlue"
                    android:textSize="@dimen/text_size14" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_reason"
                android:layout_marginTop="@dimen/margin_25"
                android:layout_marginBottom="@dimen/margin_15">

                <Button
                    android:id="@+id/btn_wfh_apply_leave"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/corner_button"
                    android:fontFamily="@font/youngserifregular"
                    android:text="Apply Now"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />


            </RelativeLayout>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="5dp"
    android:layout_marginRight="@dimen/margin_5"
    android:layout_marginLeft="@dimen/margin_5"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp">


    <RelativeLayout
        android:layout_width="wrap_content"

        android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/noti_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/notification_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="JAVA is a programming language which is used in Android App Development. It is class based and obj"
            android:textSize="@dimen/text_size14"
            android:textColor="@color/black" />

    </RelativeLayout>


        <RelativeLayout
            android:id="@+id/noti_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_below="@+id/noti_text"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/noti_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29 jan,18"
                android:textSize="@dimen/text_size16"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/read_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Read More"
                android:textSize="@dimen/text_size16"
                android:textColor="@color/black" />

        </RelativeLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>